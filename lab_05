import java.util.Arrays;

public class MyMethods {
    public static double areaOfTrapezoid(double base1, double base2, double height) {
        return 0.5 * (base1 + base2) * height;
    }

    public static int minimumOfThreeNumbers(int a, int b, int c) {
        return Math.min(Math.min(a, b), c);
    }

    public static void printArray(int[] arr) {
        System.out.println(Arrays.toString(arr));
    }

    public static int maximumOfArray(int[] arr) {
        return Arrays.stream(arr).max().getAsInt();
    }

    public static void main(String[] args) {
        double trapArea = areaOfTrapezoid(5, 7, 4);
        System.out.println("Площа трапеції: " + trapArea);

        int minNum = minimumOfThreeNumbers(8, 3, 10);
        System.out.println("Найменше число: " + minNum);

        int[] array = {1, 5, 3, 7, 2};
        printArray(array);

        int maxNum = maximumOfArray(array);
        System.out.println("Найбільше число в масиві: " + maxNum);
    }
}
